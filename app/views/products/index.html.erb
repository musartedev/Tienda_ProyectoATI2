<h1 class = "">Listing Products</h1>
<% if @products.count > 0 %>
<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">All Products</div>

  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
        <th>Pic</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td><%= product.pic %></td>
          <td><%= link_to product do %> 
         <span class ="glyphicon glyphicon-search" ></span>
          <% end %></td>
          <td><%= link_to edit_product_path(product) do %> 
         <span class ="glyphicon glyphicon-pencil" ></span>
          <% end %></td>
          <td><%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %> 
         <span class ="glyphicon glyphicon-trash" ></span>
          <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
 <%= link_to 'New Product', new_product_path, class: "btn btn-default pull-right" %>
  </div>
</div>

<% else %>
  <p>There's no products yet. Add one to the list :) </p>
  <%= link_to 'New Product', new_product_path, class: "btn btn-default" %>
<% end %>

<br>


